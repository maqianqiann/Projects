<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2de">
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/zhi_fan"
            android:layout_margin="5dp"
            android:src="@mipmap/back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView

            android:padding="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#26ff00"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认订单"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/address"
            android:id="@+id/zhi_dw"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="请添加收货地址"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/you"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/z_pic"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/z_pirce"
                    android:textColor="@color/colorMain"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 99.9"/>
                <TextView
                    android:id="@+id/z_name"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首都华盛顿就开始"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="商品数量"/>
            <Button
                android:id="@+id/z_jian"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="-"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/z_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1  "/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/z_jia"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>