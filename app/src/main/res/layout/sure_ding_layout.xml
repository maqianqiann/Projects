<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/zhi_fan"
            android:layout_margin="5dp"
            android:src="@mipmap/back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择支付方式"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/aliplay_allshare_normal"
            />
        <TextView
            android:textSize="18dp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="支付宝"
            />
        <CheckBox
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:button="@drawable/select_checkbox"
            android:layout_marginTop="15dp"
            android:id="@+id/sure_cb1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/weixin_allshare_normal"
            />
        <TextView
            android:textSize="18dp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信"
            />
        <CheckBox
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:button="@drawable/select_checkbox"
            android:layout_marginTop="15dp"

            />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认支付"
            android:id="@+id/button_sure_zhi"
            android:background="@drawable/log_r_shape"
           android:layout_margin="10dp"
            />

    </LinearLayout>
</LinearLayout>