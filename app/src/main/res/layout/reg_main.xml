<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4d2d2">
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/reg_fan"
            android:layout_margin="5dp"
            android:src="@mipmap/back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:padding="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#26ff00"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="注册"/>

    </LinearLayout>
    <EditText
        android:digits="0123456789abcdefghijklmnopqrstuvwsyz"
        android:maxLength="11"
        android:layout_marginTop="10dp"
        android:id="@+id/reg_name"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  手机号"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#b7b3b3"
        ></View>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/reg_paw"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  密码"
        android:digits="0123456789abcdefghijklmnopqrstuvwsyz"

        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/reg_reg"
        android:text="注册"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#fff"
        />
</LinearLayout>