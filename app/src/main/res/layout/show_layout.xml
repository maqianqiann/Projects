<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ch_im_first"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/user_icon_default"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/title_text_frist"
            android:textSize="20sp"
            android:text="御泥坊VIP商城"
            android:gravity="center"
            android:textColor="@color/colorMain"

            />
        <ImageView
            android:id="@+id/message_im_first"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/titlebar_review_normal"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical"
        >

        <com.youth.banner.Banner
            android:id="@+id/banner_show_fragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qiandao"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shop"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jifen"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chaxun"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~~~春节热销~~~"
            android:gravity="center"
            />

    </LinearLayout>
       <android.support.v7.widget.RecyclerView
           android:layout_marginTop="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/rv_show_c"
           ></android.support.v7.widget.RecyclerView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="~~~优惠活动~~~"
           android:gravity="center"
           />
     <com.ken.test.view.InnerListView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/lv_show_c"

         ></com.ken.test.view.InnerListView>
       <com.ken.test.view.InnerGridView
           android:verticalSpacing="3dp"
           android:horizontalSpacing="3dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/gridView_show_c"
           android:numColumns="2"
           android:gravity="center"

           android:background="#DCDCDC"
           ></com.ken.test.view.InnerGridView>
   </LinearLayout>


    </ScrollView>
</LinearLayout>